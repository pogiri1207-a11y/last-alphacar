pipeline {
    agent any

    environment {
        SONARQUBE = 'sonarqube'
        // [ìˆ˜ì •] í´ëŸ¬ìŠ¤í„° ë‚´ë¶€ ë„ë©”ì¸ì„ ì‚¬ìš©í•˜ì—¬ íƒ€ìž„ì•„ì›ƒ í•´ê²°
        SONAR_URL = 'http://sonarqube-service.jenkins.svc.cluster.local:9000'
        
        // Harbor IPê°€ 192.168.56.x ëŒ€ì—­ì¸ì§€ í™•ì¸ í•„ìš” (ì¼ë‹¨ ê¸°ì¡´ê°’ ìœ ì§€)
        HARBOR_URL = '192.168.0.169' 
        HARBOR_PROJECT = 'giri'
        FRONTEND_IMAGE = 'alphacar-frontend'
        NGINX_IMAGE = 'alphacar-nginx'

        DEPLOY_REPO = 'https://github.com/pogiri1207-a11y/last-alphacar.git'
        CREDENTIAL_ID_GITHUB = 'github-cred'
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
                script {
                    env.GIT_SHA = sh(returnStdout: true, script: 'git rev-parse --short HEAD').trim()
                    echo "ðŸ“Œ Current Git SHA: ${env.GIT_SHA}"
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    def scannerHome = tool 'sonar-scanner'
                    withSonarQubeEnv("${SONARQUBE}") {
                        // host.urlì„ í™˜ê²½ë³€ìˆ˜ì—ì„œ ê°€ì ¸ì˜¤ë„ë¡ ì„¤ì •
                        sh "${scannerHome}/bin/sonar-scanner -Dsonar.projectKey=alphacar-backend -Dsonar.sources=backend -Dsonar.host.url=${SONAR_URL}"
                    }
                }
            }
        }

        stage('Build Docker Images') {
            steps {
                script {
                    def backendServices = ['aichat', 'community', 'drive', 'mypage', 'quote', 'search', 'main']
                    backendServices.each { service ->
                        sh "docker build --build-arg APP_NAME=${service} -f backend/Dockerfile -t ${HARBOR_URL}/${HARBOR_PROJECT}/alphacar-${service}:${env.GIT_SHA} backend/"
                    }
                    sh "docker build -f frontend/Dockerfile -t ${HARBOR_URL}/${HARBOR_PROJECT}/${FRONTEND_IMAGE}:${env.GIT_SHA} frontend/"
                    sh "docker build -f nginx.Dockerfile -t ${HARBOR_URL}/${HARBOR_PROJECT}/${NGINX_IMAGE}:${env.GIT_SHA} ."
                }
            }
        }

        // [ì¶”ê°€] Trivy ë³´ì•ˆ ìŠ¤ìº” ë‹¨ê³„ (íŒ¨í„´ 1: 1íšŒìš© ì»¨í…Œì´ë„ˆ ë°©ì‹)
        stage('Trivy Security Scan') {
            steps {
                script {
                    echo "ðŸ›¡ï¸ Starting Security Scan with Trivy..."
                    // ëŒ€í‘œì ìœ¼ë¡œ main ì„œë¹„ìŠ¤ í•˜ë‚˜ë§Œ ìŠ¤ìº”í•˜ê±°ë‚˜, ë£¨í”„ë¥¼ ëŒë¦´ ìˆ˜ ìžˆìŒ
                    sh "docker run --rm -v /var/run/docker.sock:/var/run/docker.sock aquasec/trivy:latest image --severity HIGH,CRITICAL ${HARBOR_URL}/${HARBOR_PROJECT}/alphacar-main:${env.GIT_SHA}"
                }
            }
        }

        stage('Push to Harbor') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'harbor-cred', usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                    script {
                        sh 'echo $PASS | docker login ${HARBOR_URL} -u $USER --password-stdin'
                        def backendServices = ['aichat', 'community', 'drive', 'mypage', 'quote', 'search', 'main']
                        backendServices.each { service ->
                            sh "docker push ${HARBOR_URL}/${HARBOR_PROJECT}/alphacar-${service}:${env.GIT_SHA}"
                        }
                        sh "docker push ${HARBOR_URL}/${HARBOR_PROJECT}/${FRONTEND_IMAGE}:${env.GIT_SHA}"
                        sh "docker push ${HARBOR_URL}/${HARBOR_PROJECT}/${NGINX_IMAGE}:${env.GIT_SHA}"
                        sh "docker logout ${HARBOR_URL}"
                    }
                }
            }
        }

        stage('Update Manifests (GitOps)') {
            steps {
                script {
                    dir('deploy-repo') {
                        git credentialsId: "${CREDENTIAL_ID_GITHUB}", url: "${DEPLOY_REPO}"

                        def backendServices = ['aichat', 'community', 'drive', 'mypage', 'quote', 'search', 'main']
                        backendServices.each { service ->
                            sh "sed -i 's|image: .*/alphacar-${service}:.*|image: ${HARBOR_URL}/${HARBOR_PROJECT}/alphacar-${service}:${env.GIT_SHA}|g' k8s/backend/${service}-backend.yaml"
                        }

                        sh "sed -i 's|image: .*/${FRONTEND_IMAGE}:.*|image: ${HARBOR_URL}/${HARBOR_PROJECT}/${FRONTEND_IMAGE}:${env.GIT_SHA}|g' k8s/frontend/frontend-deployment.yaml"

                        sh """
                            git config user.email "jenkins@jenkins.com"
                            git config user.name "jenkins"
                            git add .
                            git commit -m "chore: update image tag to SHA-${env.GIT_SHA} [skip ci]" || echo "No changes to commit"
                            git push origin main
                        """
                    }
                }
            }
        }
    }
}
