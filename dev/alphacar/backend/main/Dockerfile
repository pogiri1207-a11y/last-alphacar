FROM node:20-alpine
WORKDIR /app
RUN apk add --no-cache libc6-compat

COPY --from=builder /app/main/dist ./dist
COPY --from=builder /app/node_modules ./node_modules
# main í´ë”ì˜ node_modulesë„ í˜¹ì‹œ ëª¨ë¥´ë‹ˆ í¬í•¨ (ì˜ì¡´ì„± ì•ˆì „ì¥ì¹˜)
